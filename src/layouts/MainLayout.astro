---
import "@fontsource/bebas-neue";
import BaseHead from "@components/BaseHead.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "@base/config";
---

<!DOCTYPE html>
<html lang="en" class="bg-slate-300 dark:bg-slate-700">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="max-w-2xl mx-auto sm:mt-4 px-4 rounded-md bg-white dark:bg-gray-900 dark:text-slate-200 shadow-2xl"
  >
    <Header title={SITE_TITLE} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
